<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="employeeService" class="main.java.by.epam.pronovich.service.EmployeeService" autowire="byName"/>

    <bean id="positionService" class="main.java.by.epam.pronovich.service.PositionService" autowire="byType"/>

    <bean id="salaryService" class="main.java.by.epam.pronovich.service.SalaryService" autowire="constructor"/>


    <bean id="company" class="main.java.by.epam.pronovich.entity.Company">
        <property name="name" value="КОМПАНИЯ"/>
    </bean>

    <bean id="currency" class="main.java.by.epam.pronovich.entity.Currency"/>

</beans>